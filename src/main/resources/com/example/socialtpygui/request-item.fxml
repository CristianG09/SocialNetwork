<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPaneRequestItem" prefHeight="60.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socialtpygui.controller.RequestItemController">
   <children>
      <Label fx:id="requestLabel" layoutX="14.0" layoutY="17.0" prefHeight="18.0" prefWidth="107.0" text="Name" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="17.0" />
         </font></Label>
      <Label fx:id="dateLabel" layoutX="217.0" layoutY="17.0" prefHeight="18.0" prefWidth="107.0" text="Date" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="17.0" />
         </font></Label>
      <ImageView fx:id="acceptBtn" fitHeight="30.0" fitWidth="30.0" layoutX="540.0" layoutY="15.0" onMouseClicked="#handlerAcceptButton" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@icons/accept.png" />
         </image>
      </ImageView>
      <ImageView fx:id="declineBtn" fitHeight="30.0" fitWidth="30.0" layoutX="581.0" layoutY="15.0" onMouseClicked="#handlerDeclineButton" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@icons/cross.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
