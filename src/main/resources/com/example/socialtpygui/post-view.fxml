<AnchorPane fx:id="anchorPanePostView" prefHeight="428.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socialtpygui.controller.PostViewController">
   <children>
      <ScrollPane fx:id="scrollPanePostView" hbarPolicy="NEVER" layoutX="12.0" layoutY="48.0" onScroll="#scrollHandler" prefHeight="445.0" prefWidth="637.0" vbarPolicy="ALWAYS">
         <content>
            <GridPane fx:id="gridPanePostView" onScroll="#scrollHandler" prefHeight="435.0" prefWidth="633.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
               <padding>
                  <Insets bottom="7.0" />
               </padding>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
            </GridPane>
         </content>
      </ScrollPane>
      <TextField fx:id="postTextField" layoutX="8.0" layoutY="7.0" prefHeight="36.0" prefWidth="575.0" promptText="What's on your mind?" />
      <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="596.0" layoutY="9.0" onMouseClicked="#handlerForPost" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@icons/noun-new-1393210.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
