               <padding>
                  <Insets bottom="7.0" />
               </padding>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
            </GridPane>
         </content>
      </ScrollPane>
      <TextField fx:id="postTextField" layoutX="8.0" layoutY="7.0" prefHeight="36.0" prefWidth="575.0" promptText="What's on your mind?" />
      <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="606.0" layoutY="10.0" onMouseClicked="#handlerForPost" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@icons/instagram-post.png" />
